<div class="card">
  <div class="card-body">

    <!--image-->
    <div class="row">
      <div class="col-md-12">
        <%= image_tag @photos[0].image.url, class: "img-fluid hor-center" if @photos.length >0 %>
      </div>
    </div>

    <br>


    <!-- Main Info -->
    <div class="row main-profile-row">

      <div class="col-md-8">
        <div class="row">
          <div class="col-md-3 text-center">
            <%= image_tag avatar_url(@book.user), class: "rounded-circle avatar-large" %><br>
            <%= @book.user.fullname %>
            <br>
          </div>

          <div class="col-md-9 vertical-center">
            <h4><%= @book.book_name %></h4>
            <%= @book.address %>
          </div>

        </div>


      </div>

      <div class="col-md-4">
        <!-- Request form -->
      </div>
    </div>



    <!-- type -->
    <div class="row type-view">
      <div class="col-md-3 ">
        <p class="type-view-p"> ▶ 도서 분야 : <%= @book.book_type %> </p>
      </div>
      <div class="col-md-3">
        <p class="type-view-p"> ▶ isbn : <%= @book.isbn %> </p>
      </div>
    </div>

    <br>
    <br>

    <!-- about -->
    <div class="row">
      <div class="col-md-12">
        <h4> 상세정보 </h4>
        <p><%= @book.summary %></p>
      </div>
    </div>


    <br>
    <br>

    <!--carousel-->
    <div class="row ">
      <div class="col-md-8 offset-md-1 hor-center" >
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

          <!-- indicators-->
          <% if @photos %>
            <ol class="carousel-indicators">
              <% @photos.each do |photo| %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= photo.id %>"></li>
              <% end %>
            </ol>
          <% end %>

          <!-- wrapper for slides -->
          <div class="carousel-inner">
            <% if @photos %>
              <% @photos.each do |photo| %>
                <div class="carousel-item <%= 'active' if photo.id == @photos[0].id %>">
                 <%= image_tag photo.image.url, class: "d-block w-100" %>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- left and right controls -->
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>





  </div>
</div>