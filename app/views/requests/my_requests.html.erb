<div class="row">
  <div class="col-md-3 sidebar-list">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "나의 책 리스트", books_path, class: "sidebar-link"%></li>
      <li class="sidebar-item"><%= link_to "받은 대여요청", rec_requests_path, class: "sidebar-link"%></li>
      <li class="sidebar-item"><%= link_to "보낸 대여요청", my_requests_path, class: "sidebar-link  active"%></li>
    </ul>
  </div>
  <div class="col-md-9 text-left">
    <div class="card">
      <div class="card-header">
        보낸 대여요청
      </div>

      <div class="card-body list-item-font">
        <div class="row">
          <div class="col-md-2 text-center">대여시작일</div>
          <div class="col-md-2 text-center">반납예정일</div>
          <div class="col-md-6 text-center ">BOOK</div>
          <div class="col-md-2">책주인</div>
        </div>
        <hr>
        <% @my_requests.each do |my_request| %>
          <div class="row list-item-custom">
            <div class="col-md-2 vertical-center">
              <%= my_request.start_date.strftime('%F') %>
            </div>
            <div class="col-md-2 vertical-center">
              <%= my_request.end_date.strftime('%F') %>
            </div>
            <div class="col-md-3">
              <%= link_to book_path(my_request.book) do %>
                <%= image_tag(my_request.book.photos[0].image.url(),class: "img-thumbnail") %>
              <% end %>
            </div>
            <div class="col-md-3 vertical-center">
              <%= link_to book_path(my_request.book) do %>
                <%= my_request.book.book_name %>
              <% end %>
            </div>
            <div class="col-md-2 vertical-center float-right image-cropper">
              <%= link_to user_path(my_request.book.user) do %>
                <%= image_tag(avatar_url(my_request.book.user), class: "rounded-circle avatar-medium") %>
              <% end %>
            </div>
          </div>
          <hr>
        <% end %>


      </div>
    </div>
  </div>
</div>