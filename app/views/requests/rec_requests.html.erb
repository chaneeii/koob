<div class="row">
  <div class="col-md-3 sidebar-list">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "나의 책 리스트", books_path, class: "sidebar-link"%></li>
      <li class="sidebar-item"><%= link_to "받은 대여요청", rec_requests_path, class: "sidebar-link active"%></li>
      <li class="sidebar-item"><%= link_to "보낸 대여요청", my_requests_path, class: "sidebar-link"%></li>
    </ul>
  </div>
  <div class="col-md-9 text-left">
    <div class="card">
      <div class="card-header">
        받은 대여요청
      </div>

      <div class="card-body list-item-font">
        <div class="row">
          <div class="col-md-2 text-center">대여시작일</div>
          <div class="col-md-2 text-center">반납예정일</div>
          <div class="col-md-6 text-center ">BOOK</div>
          <div class="col-md-2">요청인</div>
        </div>
        <hr>
        <% @books.each do |book| %>

          <% book.requests.each do |request| %>
            <div class="row list-item-custom">
              <div class="col-md-2 vertical-center">
                <%= request.start_date.strftime('%F') %>
              </div>
              <div class="col-md-2 vertical-center">
                <%= request.end_date.strftime('%F') %>
              </div>
              <div class="col-md-2">
                <%= link_to book_path(request.book) do %>
                  <%= image_tag(request.book.photos[0].image.url(),class: "img-thumbnail") %>
                <% end %>
              </div>
              <div class="col-md-4 vertical-center">
                  <%= request.request_msg %>
              </div>
              <div class="col-md-2 vertical-center float-right image-cropper">
                <%= link_to user_path(request.user) do %>
                  <%= image_tag(avatar_url(request.user), class: "rounded-circle avatar-medium") %>
                <% end %>
              </div>
            </div>
            <hr>
          <% end %>

        <% end %>

      </div>
    </div>
  </div>
</div>