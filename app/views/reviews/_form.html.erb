<%= form_for([@book, @book.reviews.new]) do |f| %>

  <div id ="user_stars"></div>
  <%= f.text_field :comment %>

  <%= f.hidden_field :book_id, value: @book.id %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<script>
      $('#user_stars').raty({
          path: '/assets/',
          half      : false,
          scoreName: 'review[star]',
          score: 1
      });
</script>