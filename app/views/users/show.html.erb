
<div class="row row-cols-1">
  <div class="l-card col-md-4 col-sm-12">
    <div class="card" style="width: 16rem;">
      <%= image_tag avatar_url(@user), class: "avatar-full card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= @user.fullname %></h5>
        <p class="card-text">
          Email Address<br>
          Kakao
        </p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>

  </div>
  <div class="col-md-8 col-sm-12 row-space-1">
    <h2><%= @user.fullname %></h2>
    <div class="description">
      <%= @user.s_description %>
    </div>
    <br>

    <h5> 총 (<%= @books.length %>)권</h5><br>
    <div class="row">
      <% @books.each do|book| %>
        <div class="col-md-4">
          <div class="card card-book-list" >
            <div class="vertical-center img-fluid preview">
              <%= image_tag(book.photos[0].image.url(),class: "card-img-top") if book.photos.length > 0 %>
            </div>
            <div class="card-body">
                <%= link_to book.book_name, book %>
              </span>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
